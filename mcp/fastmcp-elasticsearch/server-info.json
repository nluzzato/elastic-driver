  "tools": [
    {
      "key": "search_logs",
      "name": "search_logs",
      "description": "Search recent logs for a given pod with optional filters.\n\n- pod_name: Pod hostname to match (exact match on json.hostname or json.hostname.keyword)\n- timeframe_minutes: Time window to search (1..1440)\n- limit: Max results (1..1000)\n- level: Optional log level filter (matches json.levelname.keyword)\n- message_filter: Optional text match on json.message",
      "input_schema": {
        "properties": {
          "pod_name": {
            "title": "Pod Name",
            "type": "string"
          },
          "timeframe_minutes": {
            "default": 60,
            "title": "Timeframe Minutes",
            "type": "integer"
          },
          "limit": {
            "default": 100,
            "title": "Limit",
            "type": "integer"
          },
          "level": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "default": null,
            "title": "Level"
          },
          "message_filter": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "default": null,
            "title": "Message Filter"
          }
        },
        "required": [
          "pod_name"
        ],
        "type": "object"
      },
      "annotations": null,
      "tags": null,
      "enabled": true
    },
    {
      "key": "list_pods",
      "name": "list_pods",
      "description": "List unique pod hostnames seen within a timeframe.\n\n- timeframe_minutes: Time window to search (1..1440)\n- size: number of unique hostnames to return (1..1000)",
      "input_schema": {
        "properties": {
          "timeframe_minutes": {
            "default": 60,
            "title": "Timeframe Minutes",
            "type": "integer"
          },
          "size": {
            "default": 50,
            "title": "Size",
            "type": "integer"
          }
        },
        "type": "object"
      },
      "annotations": null,
      "tags": null,
      "enabled": true
    },
    {
      "key": "health",
      "name": "health",
      "description": "Quick connectivity check and current index pattern.",
      "input_schema": {
        "properties": {},
        "type": "object"
      },
      "annotations": null,
      "tags": null,
      "enabled": true
    }
  ],
